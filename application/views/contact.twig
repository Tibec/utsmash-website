{% extends "main_layout.twig" %}


{% block body %}
    <div class="container page2">
        <div class="col-sm-10 col-sm-offset-1">
            <h2 class="page-header">Nous contacter</h2>
            <div class="panel panel-default">
                <div class="panel-heading">Formulaire de contact</div>
                <div class="panel-body">
                    {% if success %}
                        <div class="alert alert-success">
                            Votre message a bien était envoyé ! Nous vous répondrons dans les plus brefs délais.
                        </div>
                    {% endif %}
                    {% if err %}
                        <div class="alert alert-danger">
                            {{ err }}
                        </div>
                    {% endif %}
                    <p>Vous pouvez nous contacter en remplissant le formulaire suivant : </p>
                    <form class="form-horizontal" method="post">
                        <div class="form-group">
                            <label for="inputPassword3" class="col-sm-2 control-label">Nom</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="name" name="name" value='{{ user.pseudo }}' placeholder="Nom">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="mail" class="col-sm-2 control-label">Email</label>
                            <div class="col-sm-10">
                                <input type="email" class="form-control" id="mail" name="mail" value="{{ user.mail }}" placeholder="Email">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="content" class="col-sm-2 control-label">Message</label>
                            <div class="col-sm-10">
                                <textarea name="content" id="content" placeholder="Votre message ..." class="form-control" rows="3"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" class="btn btn-default">Envoyer</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}